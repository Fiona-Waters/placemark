<form class="box" action="/craft/{{craft._id}}/addspot" method="POST">
  <label class="label">Enter Spot Details:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
          <label class="label">Place Name</label>
        <input class="input" type="text" pattern="[A-Za-z\s]+{1,20}" placeholder="Enter Place Name" name="placeName" required>
      </div>
      <div class="field">
          <label class="label">Latitude</label>
        <input class="input" type="number" step="0.0000001" maxlength="10" min="-90.0000000" max="90.0000000" placeholder="Enter Latitude" name="lat" required>
      </div>
      <div class="field">
        <label class="label">Longitude</label>
        <input class="input" type="number" step="0.0000001" maxlength="10" min="-180.0000000" max="180.0000000"placeholder="Enter Longitude" name="lng" required>
      </div>
      <div class="field">
          <label class="label">Description</label>
          <div class="control">
              <textarea class="textarea is-input has-fixed-size" placeholder="Description" type="text" maxlength="280" pattern="[A-Za-z\s]+{1,20}" name="description"></textarea>
          </div>
    
      </div>
    </div>
  </div>
  <button class="button is-primary">Add Spot</button>
</form>
